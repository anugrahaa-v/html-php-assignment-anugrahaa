<?php
$result = "";

// Define the function
function addNumbers($num1, $num2) {
    return $num1 + $num2;
}

// Check if form is submitted
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $number1 = isset($_POST['num1']) ? (float)$_POST['num1'] : 0;
    $number2 = isset($_POST['num2']) ? (float)$_POST['num2'] : 0;

    $result = "The sum is: " . addNumbers($number1, $number2);
}
?>

<!DOCTYPE html>
<html>
<head>
    <title>Sum of Two Numbers</title>
</head>
<body>

<h2>Add Two Numbers</h2>
<form method="post">
    <label>Number 1:</label>
    <input type="number" name="num1" step="any" required><br><br>

    <label>Number 2:</label>
    <input type="number" name="num2" step="any" required><br><br>

    <button type="submit">Add</button>
</form>

<?php if ($result): ?>
    <h3><?php echo $result; ?></h3>
<?php endif; ?>

</body>
</html>
