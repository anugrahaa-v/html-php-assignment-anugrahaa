<?php
$day_number = (int)readline("Enter a number (1 to 7) to get the day of the week: ");

switch ($day_number) {
    case 1:
        echo "Sunday\n";
        break;
    case 2:
        echo "Monday\n";
        break;
    case 3:
        echo "Tuesday\n";
        break;
    case 4:
        echo "Wednesday\n";
        break;
    case 5:
        echo "Thursday\n";
        break;
    case 6:
        echo "Friday\n";
        break;
    case 7:
        echo "Saturday\n";
        break;
    default:
        echo "Invalid input! Please enter a number between 1 and 7.\n";
}
?>
